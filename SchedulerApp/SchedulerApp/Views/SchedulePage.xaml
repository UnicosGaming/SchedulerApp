<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:prism="http://prismlibrary.com"
			 prism:ViewModelLocator.AutowireViewModel="True"
			 x:Class="SchedulerApp.Views.SchedulePage"
			 Visual="Material">

	<ContentPage.ToolbarItems>
		<ToolbarItem IconImageSource="baseline_save_white_24.jpg" Command="{Binding SaveCommand}" />
		
	</ContentPage.ToolbarItems>

	<StackLayout>
		<Entry Text="{Binding Schedule.Competition}"
			   Placeholder="Competition" />
		<Entry Text="{Binding Schedule.Stream}"
			   Placeholder="Stream URL" />
		<DatePicker Date="{Binding Schedule.Date}"
					Format="dd-MMM-yyyy" />
		<TimePicker Time="{Binding Time}"
					Format="HH:mm" />


	</StackLayout>
</ContentPage>